@model AlmuzainiCMS.Models.LoginVM.UsersInfoVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(../assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
    </div>
    <div class="col-lg-3 col-md-4 bg-white">
        <div class="p-3">
            <div class="navbar-brand">
                <!-- Logo icon -->

                <img sizes="" src="~/assets/img/muzainilogo.jpg" alt="" class="img-fluid">

            </div>
            <h2 class="mt-3 text-center">Sign In</h2>
            <p class="text-center">Enter your user name and password to access admin panel.</p>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group mb-3">
                            <label class="form-label text-dark" for="uname">Username</label>
                      
                            @Html.TextBoxFor(m => m.userName, new {placeholder ="enter your user name", @class = "form-control"})
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group mb-3">
                            <label class="form-label text-dark" for="pwd">Password</label>
                            @Html.TextBoxFor(m => m.userPass, new {placeholder ="enter your password", @class = "form-control",@type = "password" })
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" class="btn w-100 btn-dark">Sign In</button>
                    </div>
                    <div class="col-lg-12 text-center mt-5">
                        Don't have an account? <a href="#" class="text-danger">Sign Up</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


