                            </div>

                        </div>
                }
                else
                {
                    <p>No files available.</p>
                }
                
                <form enctype="multipart/form-data">
                    <div class="input-group flex-nowrap">
                        <div class="custom-file w-100">
                            <input type="file" name="HistoryImageFiles" multiple />
                        </div>
                        <button type="button" id="uploadCompanyHistoryImageButton" class="btn btn-outline-secondary">Upload</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        document.getElementById("updateExpertiseButton").addEventListener("click", function(){
            var formData = new FormData();
            var expertiseText = document.getElementById("ExpertiseText").value;

            var expertiseImageFile = document.querySelector('input[type="file"][name="ExpertiseImageFile"]');

            formData.append("ExpertiseText", expertiseText);
            formData.append("ExpertiseImageFile", expertiseImageFile.files[0]);

            $.ajax({
                url: "@Url.Action("UpdateExpertise", "About")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function(response){
                    if(response.success){
                        toastr.success(response.message);
                    }else{
                        toastr.error("Expertise update failed.");
                    }
                },
                error: function(){
                    toastr.error("An error occurred while updating expertise.");
                }
            });


        })

        //updateWorkforceButton

        document.getElementById("updateWorkforceButton").addEventListener("click", function () {
            var formData = new FormData();
            var workforceText = document.getElementById("WorkforceText").value;

            var workforceImageFile = document.querySelector('input[type="file"][name="WorkforceImageFile"]');

            formData.append("WorkforceText", workforceText);
            formData.append("WorkforceImageFile", workforceImageFile.files[0]);

