                                    @* <img class="img-fluid" src="@Url.Content("../Uploads/original/CompanyHistory/ExpertiseImage/"+ fileName)" alt="First Slide">*@
                                    <img class="img-fluid" src="@Url.Content(ViewBag.TechnologyImageFile)" alt="First Slide">
