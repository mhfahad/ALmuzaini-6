
@model ICollection<AlmuzainiCMS.Models.Models.GetTTRateResult>


<div class="col-sm-12 col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <form class="mt-4" action="CurrencySync" method="post">
                    <div>
                        <button type="submit" id="syncButton" class="btn btn-primary btn-lg">Syncronous</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div "col-sm-12 col-md-12>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Code</label>
                </th>
                <th>
                    <label>Amount</label>
                </th>
                <th>
                    <label>LC Amount</label>
                </th>
                <th>
                    <label>FC Amount</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currencyRate in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => currencyRate.currencyCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => currencyRate.rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => currencyRate.lcAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => currencyRate.fcAmount)
                    </td>
                </tr>
            }       
        </tbody>
    </table>
</div>

