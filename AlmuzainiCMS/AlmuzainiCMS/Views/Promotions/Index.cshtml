
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Promotion</h1>


<div class="col-sm-12 col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h4 class="card-title">Promotion Banner</h4>
                <h6 class="lebel">Live Images</h6>
                @if (ViewBag.BannerImagePath.Length > 0)
                {
                    <div class="col-lg-3">
                        <div class="card">
                            <div class="carousel-item-active">

                                <img class="img-fluid" src="@Url.Content(ViewBag.BannerImagePath)" alt="First Slide">
                            </div>
                        </div>
                    </div>


                }
                else
                {
                    <p>No files available.</p>
                }

                <form enctype="multipart/form-data">
                    <div class="input-group flex-nowrap">
                        <div class="custom-file w-100">
                            <input type="file" name="PromotionBannerImageFile" multiple />
                        </div>
                        <button type="button" id="UploadPromotionBannerImageFileButton" class="btn btn-outline-secondary">Upload</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h4 class="card-title">Promotion</h4>
                <form enctype="multipart/form-data">
                    <div class="input-group flex-nowrap">
                        <div class="w-100 mt-1 mb-2">
                            <label for="InnerSectionTitle">Inner Section Title </label>
                            <textarea class="form-control" cols="20" id="InnerSectionTitle" name="InnerSectionTitle" rows="2" contenteditable="true">@ViewBag.InnerSectionTitle</textarea>
                        </div>
                    </div>

                    <button type="button" id="uploadPromotionInnerSection" class="btn btn-outline-secondary">Update</button>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <h4 class="card-title">Latest Promotions</h4>
            <h6 class="lebel">Live News</h6>
            @if (ViewBag.PromotionLatestNews.Count > 0)
            {
                @foreach (var news in ViewBag.PromotionLatestNews)
                {
                    <div class="col-sm-4 col-lg-3">
                        <img class="card-img-top img-fluid" src="@Url.Content(news.ImagePath)"
                     alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@news.Title</h4>
                            <p class="card-text">
                                @news.Description
                            </p>
                            <h6 class="card-text text-muted">Last updated @news.UpdatedAt</h6>

                            <a href="javascript:void(0);" class="select-latestPromo" data-id="@news.Id" style="color:blueviolet;">Select</a>
                            <a href="javascript:void(0);" class="delete-latestPromo" data-id="@news.Id" style="color: red;">Delete</a>

                        </div>
                    </div>


                }
            }
            else
            {
                <p>No files available.</p>
            }

            <form enctype="multipart/form-data">
                <label type="text" id="newsId" style="display: None" name="newsId" class="form-control"></label>
                <label type="text" id="newsImg" style="display: None" name="newsImg" class="form-control"></label>
                <div class="row">
                    <div class="input-group flex-nowrap">
                        <div class="form-group col-sm-12 col-md-12 mb-5">
                            <h6 class="card-subtitle">Add News</h6>
                            <div class="form-group">
                                <input type="text" id="newsTitle" name="newsTitle" placeholder="News Title....." class="form-control">
                            </div>

                        </div>
                    </div>
                    <div class="input-group flex-nowrap">
                        <div class="form-group col-sm-12 col-md-12 mb-6">
                            <div class="form-group">
                                <textarea class="form-control" id="newsDescription" name="newsDescription" rows="3" placeholder="News Body....."></textarea>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="input-group flex-nowrap">
                    <div class="custom-file w-100">
                        <input type="file" name="newsImage" id="newsImage" />
                    </div>
                    <button type="button" id="uploadPromotionNews" class="btn btn-outline-secondary">Upload</button>

                    <button type="button" id="editPromotionButton" style="display: None;" class="btn btn-outline-secondary">Edit</button>
                    <button type="button" id="cancelPromotionButton" style="display: None; background-color: orangered; color: white; margin-left:5px;" class="btn btn-outline-secondary">Cancel</button>
                </div>

            </form>

        </div>

    </div>

</div>


 @section Scripts{
     <script>
             document.getElementById("uploadPromotionNews").addEventListener("click", function(){
                
                var newsTitle = document.getElementById("newsTitle").value;
                var newsDescription = document.getElementById("newsDescription").value;
                var newsImage = document.getElementById("newsImage").files[0];

                var formData = new FormData();
                formData.append("Title", newsTitle);
                formData.append("Description", newsDescription);
                    formData.append("ImageFile", newsImage);

                $.ajax({
                    url: "@Url.Action("UploadPromotionNews", "Promotions")",
                type: "POST",
                data: formData,
                contentType: false,
                processData: false,
                success: function(response){
                    if (response.success) {
                        // Display toast notification
                        toastr.success(response.message);
                        var redirectUrl = response.redirectUrl;

                        window.location.href = redirectUrl;
                    } else {
                        // Handle error case
                        toastr.error("File upload failed.");
                    }
                },
                error: function(error){
                    console.error(error);
                }


            });
        });


        document.getElementById("UploadPromotionBannerImageFileButton").addEventListener("click", function () {
            var formData = new FormData();
            var position = 1;
            // Append each selected file to the FormData object
            var filesInput = document.querySelector('input[type="file"][name="PromotionBannerImageFile"]');
            for (var i = 0; i < filesInput.files.length; i++) {
                formData.append("Files", filesInput.files[i]);
                formData.append("position", position);
            }

            $.ajax({
                url: "@Url.Action("UploadPromotionBanner", "Promotions")",  
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {

                        toastr.success(response.message);
                        var redirectUrl = response.redirectUrl;

                        window.location.href = redirectUrl;
                    } else {
                        // Handle error case
                        toastr.error("File upload failed.");

                    }
                },
                error: function () {
                    toastr.error("An error occurred while uploading Value Added Promotion Banner.");
                }
            });
        });

        document.getElementById("uploadPromotionInnerSection").addEventListener("click", function () {
            debugger;
            var formData = new FormData();
            var innerSectionTitle = document.getElementById("InnerSectionTitle").value;
          
            formData.append("InnerSectionTitle", innerSectionTitle);
            

            $.ajax({
                url: "@Url.Action("UpdatePromotionInnerSection", "Promotions")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {

                        toastr.success(response.message);
                    } else {
                        toastr.error("Inner Section update failed.");
                    }
                },
                error: function () {
                    toastr.error("An error occurred while updating Inner Section.");
                }
            });


        });



        document.querySelectorAll(".select-latestPromo").forEach(function (selectButton) {
            selectButton.addEventListener("click", function () {
                var newsId = this.getAttribute("data-id");

                $.ajax({
                    url: "/Promotions/GetLatestPromotionById",
                    method: "GET",
                    data: { id: newsId },
                    success: function (response) {

                        $("#newsId").val(response.id);
                        $("#newsTitle").val(response.title);
                        $("#newsDescription").val(response.description);
                        $("#newsImg").val(response.imagePath);

                        $('#uploadPromotionNews').hide();
                        $('#editPromotionButton').show();
                        $('#cancelPromotionButton').show();
                    },
                    error: function () {
                        console.log("Failed to fetch latest news data.");
                    }
                });
            });
        });


        document.querySelectorAll(".delete-latestPromo").forEach(function (deleteButton) {
            deleteButton.addEventListener("click", function () {
                var newsId = this.getAttribute("data-id");

                // Confirm the deletion
                var confirmDelete = confirm("Are you sure you want to delete this promotion?");
                if (confirmDelete) {
                    $.ajax({
                        url: "/Promotions/DeleteLatestPromotion",
                        method: "POST",
                        data: { id: newsId },
                        success: function (response) {
                            if (response.success) {
                                toastr.success(response.message);

                            } else {
                                toastr.error("Failed to delete Middle Slider detail.");
                            }
                        },
                        error: function () {
                            toastr.error("An error occurred while deleting Middle Slider detail.");
                        }
                    });
                }
            });
        });



        document.getElementById("editPromotionButton").addEventListener("click", function () {


            var currentdate = new Date();

            var updateId = $("#newsId").val();
            var updatedTitle = $("#newsTitle").val();
            var updatedDescription = $("#newsDescription").val();
            var updatedImagePath = $("#newsImg").val();
            var updatedCreatedAt = currentdate.getDate();

            var updateData = {
                Id: updateId,
                Title: updatedTitle,
                Description: updatedDescription,
                ImagePath: updatedImagePath,
                CreatedAt: updatedCreatedAt
            };

            $.ajax({
                url: "/Promotions/EditLatestPromotion",
                type: "POST",
                data: updateData,
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);

                    } else {
                        toastr.error("Failed to edit News.");
                    }
                },
                error: function () {
                    console.log("An error occurred during the update.");
                }
            });

        });

        ////Cancel button for Latest Promotion

        document.getElementById("cancelPromotionButton").addEventListener("click", function () {

            $("#newsId").val('');
            $("#newsTitle").val('');
            $("#newsDescription").val('');
            $("#newsImg").val('');

            $('#uploadPromotionNews').show();
            $('#editPromotionButton').hide();
            $('#cancelPromotionButton').hide();
        });



     </script>
            
}