                        <div class="card-body">
                                <h4 class="card-title">@news.Title</h4>
                            <p class="card-text">
                                @news.Description
                            </p>
                            <p class="card-text text-muted">Last updated @news.UpdatedAt></p>
                            </div>
                        </div>
                       

                    }
