@section Scripts{

    <script>


        document.getElementById("uploadSliderButton").addEventListener("click", function () {
            var formData = new FormData();
            var position = $("#ddlTopSliderSelect option:selected").val();
            // Append each selected file to the FormData object
            var filesInput = document.querySelector('input[type="file"][name="Files"]');
            for (var i = 0; i < filesInput.files.length; i++) {
                formData.append("Files", filesInput.files[i]);
                formData.append("position", position);
            }

            $.ajax({
                url: "@Url.Action("UploadTopSlider", "Home")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        // Display toast notification
                        toastr.success(response.message);
                    } else {
                        // Handle error case
                        toastr.error("File upload failed.");
                        var redirectUrl = response.redirectUrl;

                        window.location.href = redirectUrl;
                    }
                },
                error: function () {
                    toastr.error("An error occurred while uploading the file.");
                }
            });
        });

        document.getElementById("uploadRateCalculatorNote").addEventListener("click", function () {

            var formData = new FormData();

            var rateNoteText = document.getElementById("rateNoteText").value;

            formData.append("RateNote", rateNoteText);

            $.ajax({
                url: "@Url.Action("uploadRateCalculatorNote", "Home")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {

                        toastr.success(response.message);
                    } else {
                        toastr.error("Note update failed.");
                    }
                },
                error: function () {
                    toastr.error("An error occurred while updating Note.");
                }


            });
        });

        document.getElementById("uploadCompanyDetail").addEventListener("click", function () {

            var formData = new FormData();

            var compDetailTitle = document.getElementById("compDetailTitle").value;
            var compDetailSubTitle = document.getElementById("compDetailSubTitle").value;
            var compDetailBoxOneTitle = document.getElementById("compDetailBoxOneTitle").value;
            var compDetailBoxOneDesc = document.getElementById("compDetailBoxOneDesc").value;
            var compDetailBoxTwoTitle = document.getElementById("compDetailBoxTwoTitle").value;
            var compDetailBoxTwoDesc = document.getElementById("compDetailBoxTwoDesc").value;
            var compDetailBoxThreeTitle = document.getElementById("compDetailBoxThreeTitle").value;
            var compDetailBoxThreeDesc = document.getElementById("compDetailBoxThreeDesc").value;
            var compDetailBoxFourTitle = document.getElementById("compDetailBoxFourTitle").value;
            var compDetailBoxFourDesc = document.getElementById("compDetailBoxFourDesc").value;

            formData.append("Title", compDetailTitle);
            formData.append("SubTitle", compDetailSubTitle);
            formData.append("BoxOneTitle", compDetailBoxOneTitle);
            formData.append("BoxOneDesc", compDetailBoxOneDesc);
            formData.append("BoxTwoTitle", compDetailBoxTwoTitle);
            formData.append("BoxTwoDesc", compDetailBoxTwoDesc);
            formData.append("BoxThreeTitle", compDetailBoxThreeTitle);
            formData.append("BoxThreeDesc", compDetailBoxThreeDesc);
            formData.append("BoxFourTitle", compDetailBoxFourTitle);
            formData.append("BoxFourDesc", compDetailBoxFourDesc);

            $.ajax({
                url: "@Url.Action("uploadCompanyDetail", "Home")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {

                        toastr.success(response.message);
                    } else {
                        toastr.error("Company Details update failed.");
                    }
                },
                error: function () {
                    toastr.error("An error occurred while updating Company Details.");
                }


            });
        });


        //uploadRateCalculatorButton
        document.getElementById("uploadRateCalculatorButton").addEventListener("click", function () {
            var formData = new FormData();

            // Append each selected file to the FormData object
            var filesInput = document.querySelector('input[type="file"][name="RateCalculatorFiles"]');
            var position = $("#ddlRateCalculatorSelection option:selected").val();
            for (var i = 0; i < filesInput.files.length; i++) {
                formData.append("Files", filesInput.files[i]);

            }

            formData.append("position", position)

            $.ajax({
                url: "@Url.Action("UploadRateCalculator", "Home")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {

                        toastr.success(response.message);

                        var redirectUrl = response.redirectUrl;

                        window.location.href = redirectUrl;


                    } else {
                        // Handle error case
                        toastr.error("File upload failed.");
                    }
                },
                error: function () {
                    toastr.error("An error occurred while uploading the file.");
                }
            });
        });

        //uploadMiddleSliderButton
        document.getElementById("uploadMiddleSliderButton").addEventListener("click", function () {
            var formData = new FormData();

            // Append each selected file to the FormData object

            var midSlideHeading = document.getElementById("midSlideHeading").value;
            var midSlideDescription = document.getElementById("midSlideDescription").value;

            var position = $("#ddlMiddleSliderSelection option:selected").val();

            formData.append("HeadDesc", midSlideHeading);
            formData.append("Description", midSlideDescription);

            formData.append("position", position)

            $.ajax({
                url: "@Url.Action("UploadMiddleSlider", "Home")",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        // Display toast notification
                        toastr.success(response.message);
                    } else {
                        // Handle error case
                        toastr.error("Middle Slider upload failed.");
                    }
                },
                error: function () {
                    toastr.error("An error occurred while uploading the file.");
                }
            });
        });

        document.querySelectorAll(".select-midSlide").forEach(function (selectButton) {
            selectButton.addEventListener("click", function () {
                var midSlideId = this.getAttribute("data-id");

                $.ajax({
                    url: "/Home/GetHomeMidSlideById",
                    method: "GET",
                    data: { id: midSlideId },
                    success: function (response) {

                        $("#midSlideHeading").val(response.headDesc);
                        $("#midSlideDescription").val(response.description);
                    },
                    error: function () {
                        console.log("Failed to fetch Home Middle Slider data.");
                    }
